
{% extends "base.njk" %}

{% block head %}
    {{ super() }}
    <title>لوحة تحكم الإدارة - سطحة هيدروليك</title>
    <style>
        .sidebar {
            height: 100vh;
            background-color: #343a40; /* Dark background for sidebar */
            color: white;
            padding-top: 20px;
        }
        .sidebar .nav-link {
            color: #adb5bd; /* Lighter text for links */
            padding: 10px 15px;
            transition: background-color 0.3s;
        }
        .sidebar .nav-link:hover {
            background-color: #495057;
            color: white;
        }
        .sidebar .nav-link.active {
            background-color: #007bff; /* Primary color for active link */
            color: white;
        }
        .content-area {
            padding: 20px;
        }
        .card-stats {
            text-align: center;
        }
        .card-stats h3 {
            font-size: 2.5em;
            margin-bottom: 5px;
        }
    </style>
{% endblock %}

